.product_display
  - @products.each do |product|
    .product_display_flame
      - if user_signed_in? && current_user.id == product.user_id
        .product_display_flame--image
          =  image_tag product.images
        .product_display_flame--name
          = product.name
        .product_display_flame--edit
          = link_to '編集', edit_product_path(product)